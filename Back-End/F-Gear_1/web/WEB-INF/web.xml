<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Admin_Controller</servlet-name>
        <servlet-class>com.fptuni.swp391.F_Gear.Controllers.Admin_Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>User_Controller</servlet-name>
        <servlet-class>com.fptuni.swp391.F_Gear.Controllers.User_Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home_Controller</servlet-name>
        <servlet-class>com.fptuni.swp391.F_Gear.Controllers.Home_Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Product_Controller</servlet-name>
        <servlet-class>com.fptuni.swp391.F_Gear.Controllers.Product_Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Detail_Controller</servlet-name>
        <servlet-class>com.fptuni.swp391.F_Gear.Controllers.Detail_Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cart_Controller</servlet-name>
        <servlet-class>com.fptuni.swp391.F_Gear.Controllers.Cart_Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User_Controller</servlet-name>
        <url-pattern>/Profile/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Product_Controller</servlet-name>
        <url-pattern>/Product/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home_Controller</servlet-name>
        <url-pattern>/Home/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Detail_Controller</servlet-name>
        <url-pattern>/Detail/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admin_Controller</servlet-name>
        <url-pattern>/Admin/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>views/login.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>Cart_Controller</servlet-name>
        <url-pattern>/Cart/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            300
        </session-timeout>
    </session-config>
</web-app>
